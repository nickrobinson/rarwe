<ul class="rr-list">
  {{#each this.model.songs as |song|}}
    <li class="rr-list-item">
      {{song.title}}
      <span class="rr-rating fr">{{song.rating}}</span>
    </li>
  {{else}}
    <li class="tc">
      No {{this.model.name}} songs yet, why don't you <a href="#" {{on "click" this.addSong}}>create one?</a>
    </li>
  {{/each}}
</ul>
<div class="rr-new-label">
  {{#if this.isAddingSong}}
    <form class="rr-inline-form" {{on "submit" this.saveSong}}>
      <Input
        @type="text"
        @value={{this.newSongTitle}}
        class="rr-input"
        placeholder="New song"
      />
      <div class="rr-inline-form-group ml-auto">
        <button type="submit" class="rr-action-button" disabled={{this.isAddButtonDisabled}}>Add</button>
        <button class="rr-cancel-icon" {{on "click" this.cancelAddSong}}>
          {{fa-icon "times"}}
        </button>
      </div>
    </form>
  {{else}}
    <label {{on "click" this.addSong}}>
      {{fa-icon "plus"}}
      <span class="ml1">Add new song</span>
    </label>
  {{/if}}
</div>